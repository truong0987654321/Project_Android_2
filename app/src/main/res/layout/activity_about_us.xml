<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_32dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/angle_left_solid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:text="Về Solo Leveling"
            android:textAlignment="center"
            android:textColor="@color/color_edit"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlLayout"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_gray"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/color_edit"
            android:text="Solo Leveling"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_aboutus"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_edit"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Phiên bản 1.0" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/editProfileLayout"
        android:layout_below="@+id/rlLayout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Liên hệ"
            android:textColor="@color/color_edit" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_24"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/editProfileLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/divider_line" />
    <RelativeLayout
        android:id="@+id/dk"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Các điều khoản"
            android:textColor="@color/color_edit" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</RelativeLayout>